<%- include('./partials/header.ejs')%>
<%- include('./partials/homenavbar.ejs')%>
<body>
    <br>
    <div class="container">
        <div class="jumbotron">
            <h1 class="display-4">Bem vindo ao GuiaWpress</h1>
            <p class="lead">Este é um simple site onde você encontrar vários artigos sobre uma grande variedade de assuntos e gostos.</p>
            <hr class="my-4">
            <p>Você também pode ser nosso escritor de artigos, o que acha? vem fazer parte de nossa equipe.</p>
            <a class="btn btn-primary btn-lg" href="#" role="button">Ler mais</a>
          </div>
          <hr>
        <% articles.forEach(article => { %>
        <div class="card">
            <div class="card-header">
                <%= article.title %>
            </div>
            <div class="card-body">
                <a class="btn btn-primary" href="/<%= article.slug %>">Ler artigo</a>
            </div>
        </div>
        <br>
        <% }) %>
        <div class="row">
            <div class="col col-12">
                <a style="float: right;" href="/articles/page/2">Next >>></a>
            </div>
        </div>
        <hr>
    </div>
</body>
<%- include('./partials/footer.ejs')%>